{
  "author": "craftwar",
  "name": "Tweak Pixiv",
  "version": "23.12.3.1",
  "manifest_version": 3,
  "description": "Get better pixiv experience",
  "homepage_url": "https://github.com/craftwar/Tweak-Pixiv",
  "host_permissions": [
    "*://*.pixiv.net/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "Tweak-Pixiv_craftwar@github.com",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.pixiv.net/*"
      ],
      "js": [
        "index.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}